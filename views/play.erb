<% if game.message %>
<div id="message" class="overlayer top">
  <p><%= game.message %></p>
</div>
<% end %>
<div class="container-fluid inner">
  <div class="row">
    <div class="col-md-4 vcenter">
      <div class="col-md-8 col-md-offset-2 overlayer block">
        <img src="<%= game.player1.img_link %>" class="img-circle" alt="Player 1 Gravatar" width="100" height="100">
        <h2><%= game.player1_name %></h2>
        <div class="progress">
          <div id="progress-bar-1" class="progress-bar <% if game.player1_critical_damage? %>progress-bar-danger<% else %>progress-bar-success<% end %>" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:<%= game.player1_hp_percentage %>%">
          </div>
        </div>
      </div>
    </div><!--
  --><div class="col-md-4 vcenter vs">
      VS
    </div><!--
  --><div class="col-md-4 vcenter">
      <div class="col-md-8 col-md-offset-2 overlayer block">
        <img src="<%= game.player2.img_link %>" class="img-circle" alt="Player 2 Gravatar" width="100" height="100">
        <h2><%= game.player2_name %></h2>
        <div class="progress">
          <div id="progress-bar-2" class="progress-bar <% if game.player2_critical_damage? %>progress-bar-danger<% else %>progress-bar-success<% end %>" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:<%= game.player2_hp_percentage %>%">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="navigation" class="overlayer bottom">
  <div class="attacker"><%= game.attacker_name %>'s turn</div>
  <form method="post" action="/attack">
    <input class="btn btn-default" type="submit" value="ATTACK">
  </form>
  <form method="post" action="/attack">
    <input class="btn btn-default" type="submit" value="OTHERS">
  </form>
</div>
